<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="554dp"
        android:layout_height="879dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912"
        app:srcCompat="@drawable/b" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/startGameButton"
            android:layout_width="209dp"
            android:layout_height="51dp"
            android:text="OYNA"
            android:textColor="@color/purple_200"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.87" />

        <RadioGroup
            android:id="@+id/playerCheckRadioGroup"
            android:layout_width="155dp"
            android:layout_height="122dp"
            android:onClick="playerCheckClicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.289">

            <RadioButton
                android:id="@+id/onePlayerRadioButton"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:onClick="playerOneClicked"
                android:text="Tek Oyuncu"
                android:textColor="@color/purple_200"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/twoPlayerRadioButton"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:onClick="playerTwoClicked"
                android:text="İki Oyuncu"
                android:textColor="@color/purple_200"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/levelRadioGroupCheck"
            android:layout_width="163dp"
            android:layout_height="180dp"
            android:onClick="levelCheckClicked"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.853"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.663">

            <RadioButton
                android:id="@+id/twoByTwoRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2x2"
                android:textColor="@color/purple_200"
                android:textSize="20sp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/fourByFourRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4x4"
                android:textColor="@color/purple_200"
                android:textSize="20sp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/sixBySixRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6x6"
                android:textColor="@color/purple_200"
                android:textSize="20sp"
                android:visibility="visible" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView"
            android:layout_width="156dp"
            android:layout_height="41dp"
            android:text="Oyun Zorluğu :"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_200"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.529" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="358dp"
            android:layout_height="38dp"
            android:text="Kaç kişi oynamak istiyorsunuz ?"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.686"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.199" />

        <TextView
            android:id="@+id/merhabaText"
            android:layout_width="122dp"
            android:layout_height="46dp"
            android:text="Merhaba,"
            android:textColor="@color/purple_200"
            android:textSize="28sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.098" />

        <TextView
            android:id="@+id/textusername1"
            android:layout_width="226dp"
            android:layout_height="46dp"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_200"
            android:textSize="28sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.803"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.099" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>